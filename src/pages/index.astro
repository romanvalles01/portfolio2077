---
import PixelBlast from "../components/PixelBlast.jsx";
import FbxViewer from "../components/FbxViewer.jsx";
import "../styles/global.css";

const projects = [
  {
    title: "GhostWorkers · Collaboration Platform",
    desc: "SaaS for task management with workspaces, role-based access, and real-time updates. Designed for small teams and contractors.",
    stack: ["Next.js", "Firebase", "Tailwind", "Shadcn/UI"],
    link: "https://ghostworkers.vercel.app/landing",
    featured: true,
  },
  {
    title: "Andromeda · Digital Lab",
    desc: "Independent brand focused on developing custom web solutions, UI design, and automation tools for local businesses.",
    stack: ["Next.js", "Firebase", "Cloudflare", "Shadcn/UI"],
    link: "https://www.weareandromeda.dev/",
  },
  {
    title: "Sillones Rosario · E-commerce",
    desc: "Furniture e-commerce platform built with React, Firebase, and Cloudinary. Includes admin dashboard, Mercado Pago integration, and CDN optimization.",
    stack: ["React", "Firebase", "Cloudinary", "Tailwind"],
    link: "https://sillonesrosario.com/",
  },
  {
    title: "Trading Platform",
    desc: "Educational trading dashboard with automation tools, secure auth, and video modules.",
    stack: ["Vite", "Firebase", "TypeScript", "Tailwind"],
    link: "https://franco-trading-app.pages.dev/",
  },
  {
    title: "Burger03 · Restaurant Order System",
    desc: "Real-time order management app for a restaurant, with Firebase Realtime Database and mobile-first UX.",
    stack: ["Next.js", "Firebase", "Tailwind"],
    link: "https://burgers03.com/",
  },
];

const skills = [
  // Frontend
  "JavaScript",
  "TypeScript",
  "HTML",
  "CSS",
  "Tailwind CSS",
  "React.js",
  "Next.js",
  "React Router",
  "Redux",
  "Redux Toolkit",
  "RTK Query",
  "Recharts",
  "React Native",
  "Tiptap",
  "Hooks",
  "i18next",
  "Astro",
  "Vue.js",

  // Backend & APIs
  "Node.js",
  "Express",
  "REST APIs",
  "GraphQL",
  "NestJS",

  // Databases
  "SQL",
  "PostgreSQL",
  "MongoDB",
  "Firebase (Firestore & Realtime DB)",
  "Firebase Authentication",
  "Firebase Cloud Functions",
  "Firebase Hosting",
  // Testing & Methodologies
  "Jest",
  "TDD",
  "Scrum / Agile",

  // DevOps / Infra
  "Docker",
  "AWS",
  "Google Cloud (GCP)",
  "Netlify",
  "Vercel",

  // Tools
  "Git",
  "GitHub",
  "Postman",
  "Auth0",
  "Twilio",
  "Axios",

  // UX / Design
  "Figma",
  "UX/UI Design",
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Román Valles — Front-End Developer</title>
    <meta
      name="description"
      content="Front-end developer specialized in React, Next.js, and Firebase. Focused on performance, UX, and modern web applications."
    />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://romanvalles.dev/" />

    <!-- Open Graph -->
    <meta property="og:title" content="Roman — Front-End Developer" />
    <meta
      property="og:description"
      content="Building clear, fast, and secure digital experiences."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://romanvalles.dev/" />
    <meta property="og:image" content="https://romanvalles.dev/preview.jpg" />
    <meta property="og:site_name" content="Román Valles Portfolio" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Roman — Front-End Developer" />
    <meta
      name="twitter:description"
      content="Building clear, fast, and secure digital experiences."
    />
    <meta name="twitter:image" content="https://romanvalles.dev/preview.jpg" />

    <!-- Theme -->
    <meta name="theme-color" content="#0f0f0f" />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body
    class="min-h-dvh bg-white text-neutral-900 antialiased dark:bg-neutral-950 dark:text-neutral-100"
  >
    <!-- HEADER MOBILE (solo en < md) -->
    <header
      class="flex items-center justify-between border-b border-neutral-900/70 bg-neutral-950/90 px-4 py-3 text-xs text-neutral-100 backdrop-blur md:hidden"
    >
      <div class="flex items-center gap-2">
        <div
          class="flex h-8 w-8 items-center justify-center rounded-lg border border-emerald-400/40 bg-emerald-500/10 text-[10px] font-semibold tracking-[0.22em] text-emerald-300"
        >
          RV
        </div>
        <div class="leading-tight">
          <p class="text-[10px] tracking-[0.22em] text-neutral-500 uppercase">Portfolio</p>
          <p class="text-xs font-medium">Román Valles</p>
        </div>
      </div>

      <nav class="flex items-center gap-3 text-[11px]">
        <a href="#home" class="hover:text-white">Overview</a>
        <a href="#projects" class="hover:text-white">Projects</a>
        <a href="#skills" class="hover:text-white">Skills</a>
        <a href="#experience" class="xs:inline hidden hover:text-white">Experience</a>
        <a href="#contact" class="hidden hover:text-white sm:inline">Contact</a>
      </nav>
    </header>

    <!-- SIDEBAR DESKTOP -->
    <aside
      class="hidden md:fixed md:inset-y-0 md:left-0 md:z-40 md:flex md:w-60 md:border-r md:border-neutral-800/80 md:bg-neutral-950/80 md:backdrop-blur-xl"
    >
      <div class="flex h-full flex-col gap-8 px-6 py-8">
        {/* Branding */}
        <div class="flex items-center gap-3">
          <div
            class="font-departure flex h-10 w-10 items-center justify-center rounded-lg border border-emerald-400/40 bg-emerald-500/10 text-xs font-semibold tracking-[0.22em] text-emerald-300"
          >
            RV
          </div>
          <div class="leading-tight">
            <p class="text-xs tracking-[0.22em] text-neutral-500 uppercase">Portfolio</p>
            <p class="text-sm font-medium text-neutral-100">Román Valles</p>
            <p class="text-xs text-neutral-500">Full-Stack Developer</p>
          </div>
        </div>

        {/* Navegación */}
        <nav class="space-y-1 text-sm">
          <p class="mb-2 text-[11px] tracking-[0.22em] text-neutral-500 uppercase">Sections</p>

          <a
            href="#home"
            class="group flex items-center gap-2 rounded-lg px-2 py-1.5 text-neutral-300 transition hover:bg-neutral-900/70 hover:text-white"
          >
            <span
              class="h-3 w-1 rounded-full bg-emerald-400/0 transition group-hover:bg-emerald-400/80"
            ></span>
            <span>Overview</span>
          </a>

          <a
            href="#projects"
            class="group flex items-center gap-2 rounded-lg px-2 py-1.5 text-neutral-300 transition hover:bg-neutral-900/70 hover:text-white"
          >
            <span
              class="h-3 w-1 rounded-full bg-emerald-400/0 transition group-hover:bg-emerald-400/80"
            ></span>
            <span>Projects</span>
          </a>

          <a
            href="#skills"
            class="group flex items-center gap-2 rounded-lg px-2 py-1.5 text-neutral-300 transition hover:bg-neutral-900/70 hover:text-white"
          >
            <span
              class="h-3 w-1 rounded-full bg-emerald-400/0 transition group-hover:bg-emerald-400/80"
            ></span>
            <span>Skills</span>
          </a>

          <a
            href="#experience"
            class="group flex items-center gap-2 rounded-lg px-2 py-1.5 text-neutral-300 transition hover:bg-neutral-900/70 hover:text-white"
          >
            <span
              class="h-3 w-1 rounded-full bg-emerald-400/0 transition group-hover:bg-emerald-400/80"
            ></span>
            <span>Experience</span>
          </a>

          <a
            href="#contact"
            class="group flex items-center gap-2 rounded-lg px-2 py-1.5 text-neutral-300 transition hover:bg-neutral-900/70 hover:text-white"
          >
            <span
              class="h-3 w-1 rounded-full bg-emerald-400/0 transition group-hover:bg-emerald-400/80"
            ></span>
            <span>Contact</span>
          </a>
        </nav>

        {/* Bloque inferior (Social / Contact) */}
        <div class="mt-auto space-y-3 text-xs text-neutral-500">
          <div class="h-px bg-neutral-800/80"></div>

          <p class="text-[11px] tracking-[0.22em] uppercase">Reach out</p>

          <div class="flex flex-col gap-1.5">
            <a
              href="mailto:romanvalles01@gmail.com"
              class="text-neutral-300 transition hover:text-white"
            >
              Email
            </a>
            <a
              href="https://github.com/romanvalles01"
              target="_blank"
              class="text-neutral-300 transition hover:text-white"
            >
              GitHub
            </a>
            <a
              href="https://www.linkedin.com/in/romanvalles"
              target="_blank"
              class="text-neutral-300 transition hover:text-white"
            >
              LinkedIn
            </a>
          </div>
        </div>
      </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="md:ml-60">
      <section id="home" class="relative mx-auto max-w-6xl overflow-hidden px-4 pt-16 pb-10">
        <div class="pointer-events-none absolute inset-0 -z-10">
          <PixelBlast
            client:load
            className="absolute inset-0 -z-10"
            variant="triangle"
            color="#2b9424"
            pixelSize={4}
            patternScale={1.25}
            patternDensity={2}
            pixelSizeJitter={2}
            speed={0.85}
            edgeFade={0.5}
            enableRipples={false}
            liquid={false}
          />
        </div>

        <!-- Contenido del hero -->
        <p class="text-xs tracking-[0.2em] text-white uppercase">Open to work</p>

        <h1 class="font-departure mt-3 text-4xl leading-tight font-bold md:text-6xl">
          Román Valles
        </h1>

        <p class="mt-4 max-w-2xl text-neutral-300">
          FullStack Developer specializing in front-end development with React, Next.js, and
          Firebase. Passionate about building performant, user-friendly web applications with a
          focus on UX and modern design principles.
        </p>

        <div class="mt-6 flex flex-wrap gap-3">
          <a
            href="#projects"
            class="rounded-xl bg-neutral-900 px-4 py-2 text-sm font-medium text-white hover:opacity-90"
          >
            View projects
          </a>
          <a
            href="/RomanValles-cv.pdf"
            class="rounded-xl border border-neutral-700 bg-amber-50 px-4 py-2 text-sm font-medium text-black transition hover:bg-neutral-800 hover:text-white"
          >
            Download CV
          </a>
        </div>
      </section>

      <section id="about" class="mx-auto max-w-6xl px-4 py-16">
        <div class="grid items-center gap-10 md:grid-cols-[minmax(0,1.1fr)_minmax(0,0.9fr)]">
          <!-- Columna texto -->
          <div>
            <p class="text-xs tracking-[0.22em] text-neutral-500 uppercase">About me</p>

            <h2 class="font-departure mt-3 text-3xl text-white md:text-4xl">
              Full-stack developer focused on modern web products.
            </h2>

            <p class="mt-5 text-base leading-relaxed text-white/80">
              I design and build digital products that feel fast, intuitive, and reliable. My work
              goes beyond picking a tech stack — I care about clear architectures, smooth user
              journeys, and systems that scale without becoming fragile. I approach each project
              with a mix of design sensitivity, engineering discipline, and a strong focus on
              performance and clarity.
            </p>

            <div class="mt-6 flex flex-wrap gap-3 text-xs text-white/80">
              <span class="rounded-full border border-neutral-800 bg-neutral-900/60 px-3 py-1">
                Focus on UX & performance
              </span>
              <span class="rounded-full border border-neutral-800 bg-neutral-900/60 px-3 py-1">
                Frontend-oriented full-stack
              </span>
              <span class="rounded-full border border-neutral-800 bg-neutral-900/60 px-3 py-1">
                Modern JS/TS ecosystems
              </span>
            </div>
          </div>

          <!-- Columna modelo 3D -->

          <FbxViewer client:load />
        </div>
      </section>

      <section id="experience" class="mx-auto max-w-6xl px-4 py-12">
        <h2 class="text-2xl font-semibold md:text-3xl">Experience</h2>
        <div class="mt-6 space-y-4">
          <article class="rounded-2xl border border-neutral-200 p-5 dark:border-neutral-800">
            <header class="flex items-center justify-between">
              <h3 class="font-medium">COSMIND IT · Software Engineer</h3>
              <span class="text-xs text-white">Jun 2022 — Present</span>
            </header>
            <ul class="mt-2 list-disc pl-5 text-sm text-neutral-700 dark:text-neutral-300">
              <li>Development of high-performance applications with Next.js and Vite.</li>
              <li>Responsive UI creation with React and TypeScript.</li>
              <li>Integration with REST/GraphQL APIs and UX/UI optimization.</li>
              <li>Agile methodologies and Git workflow for project management.</li>
            </ul>
          </article>

          <article class="rounded-2xl border border-neutral-200 p-5 dark:border-neutral-800">
            <header class="flex items-center justify-between">
              <h3 class="font-medium">
                Axelia Cybersecurity · Full Stack Developer &amp; Cybersecurity Intern
              </h3>
              <span class="text-xs text-white">Jun 2025 — Aug 2025</span>
            </header>
            <ul class="mt-2 list-disc pl-5 text-sm text-neutral-700 dark:text-neutral-300">
              <li>Web vulnerability analysis and configuration assessments.</li>
              <li>Implementation of API security and CI/CD automation.</li>
              <li>Security dashboards and technical reporting.</li>
              <li>Applied DevSecOps practices and containerized testing with Docker.</li>
            </ul>
          </article>

          <article class="rounded-2xl border border-neutral-200 p-5 dark:border-neutral-800">
            <header class="flex items-center justify-between">
              <h3 class="font-medium">A3 Sports · Full Stack Developer (Freelance)</h3>
              <span class="text-xs text-white">Aug 2023 — Mar 2024</span>
            </header>
            <ul class="mt-2 list-disc pl-5 text-sm text-neutral-700 dark:text-neutral-300">
              <li>Developed interactive sports analysis dashboards.</li>
              <li>Integrated YouTube API and dynamic playlist system.</li>
              <li>Optimized performance and user experience.</li>
            </ul>
          </article>
        </div>
      </section>

      <section id="projects" class="mx-auto max-w-6xl px-4 py-12">
        <h2 class="text-2xl font-semibold md:text-3xl">Projects</h2>
        <ul class="mt-6 grid gap-4 md:grid-cols-2">
          {
            projects.map((p) => (
              <li class="group rounded-2xl border border-neutral-200 p-5 hover:bg-neutral-50 dark:border-neutral-800 dark:hover:bg-neutral-900">
                <div class="flex items-center justify-between gap-2">
                  <h3 class="text-lg leading-tight font-medium">{p.title}</h3>
                  <span class="transition-transform group-hover:translate-x-0.5">→</span>
                </div>
                <p class="mt-2 text-sm text-neutral-600 dark:text-neutral-300">{p.desc}</p>
                <div class="mt-3 flex flex-wrap gap-2 text-xs text-white">
                  {p.stack.map((s) => (
                    <span class="rounded-full border border-neutral-300 px-2 py-1 dark:border-neutral-700">
                      {s}
                    </span>
                  ))}
                </div>
                <a
                  target="_blank"
                  href={p.link}
                  class="mt-4 inline-block text-sm font-medium underline underline-offset-4"
                >
                  View details of {p.title}
                </a>
              </li>
            ))
          }
        </ul>
      </section>

      <section id="skills" class="mx-auto max-w-6xl px-4 py-16">
        <h2 class="font-departure text-3xl md:text-4xl">Skills</h2>

        <ul class="mt-8 flex flex-wrap gap-3">
          {
            skills.map((s) => (
              <li class="rounded-lg border border-neutral-800/70 bg-neutral-900/40 px-4 py-2 text-sm text-neutral-300 transition hover:border-emerald-500/40 hover:text-white hover:shadow-[0_0_20px_rgba(16,185,129,0.08)]">
                {s}
              </li>
            ))
          }
        </ul>
      </section>

      <section id="contact" class="mx-auto max-w-6xl px-4 py-20">
        <h2 class="font-departure text-3xl md:text-4xl">Contact</h2>

        <p class="mt-4 max-w-2xl text-neutral-400">
          Ready to collaborate? Reach out through any of the following channels.
        </p>

        <div class="mt-10 grid gap-4 sm:grid-cols-3">
          <a
            href="mailto:romanvalles01@gmail.com"
            target="_blank"
            class="group rounded-xl border border-neutral-800 bg-neutral-900/40 px-6 py-5 transition hover:border-neutral-600 hover:bg-neutral-900"
          >
            <p class="text-xs tracking-wider text-neutral-400 uppercase">Email</p>
            <p class="mt-1 text-sm font-medium text-white group-hover:text-emerald-300">
              romanvalles01@gmail.com
            </p>
          </a>

          <a
            href="https://github.com/romanvalles01"
            target="_blank"
            class="group rounded-xl border border-neutral-800 bg-neutral-900/40 px-6 py-5 transition hover:border-neutral-600 hover:bg-neutral-900"
          >
            <p class="text-xs tracking-wider text-neutral-400 uppercase">GitHub</p>
            <p class="mt-1 text-sm font-medium text-white group-hover:text-emerald-300">
              github.com/romanvalles01
            </p>
          </a>

          <a
            href="https://www.linkedin.com/in/romanvalles"
            target="_blank"
            class="group rounded-xl border border-neutral-800 bg-neutral-900/40 px-6 py-5 transition hover:border-neutral-600 hover:bg-neutral-900"
          >
            <p class="text-xs tracking-wider text-neutral-400 uppercase">LinkedIn</p>
            <p class="mt-1 text-sm font-medium text-white group-hover:text-emerald-300">
              linkedin.com/in/romanvalles
            </p>
          </a>
        </div>
      </section>
    </main>

    <footer class="border-t border-neutral-800/80 bg-neutral-950/80 md:ml-60">
      <div
        class="mx-auto flex max-w-6xl flex-col gap-3 px-4 pt-12 pb-12 text-xs text-neutral-400 sm:flex-row sm:items-center sm:justify-between"
      >
        {/* Izquierda: copyright + nombre */}
        <div class="space-y-1">
          <p class="font-medium text-neutral-200">
            © {new Date().getFullYear()} Román Valles
          </p>
          <p class="text-[11px] tracking-[0.18em] text-neutral-500 uppercase">
            Full-Stack Developer · Portfolio
          </p>
        </div>

        {/* Centro: stack / tech */}
        <div class="text-[11px] text-neutral-500 sm:text-right">
          <p>
            Built with <span class="text-neutral-200">Astro</span>,{" "}
            <span class="text-neutral-200">Tailwind</span> &amp;{" "}
            <span class="text-neutral-200">React bits</span>.
          </p>
        </div>

        {/* Derecha: acción */}
        <div class="flex items-center justify-between gap-3 sm:flex-col sm:items-end">
          <a
            href="#home"
            class="text-[11px] font-medium tracking-[0.18em] text-neutral-300 uppercase underline underline-offset-4 hover:text-white"
          >
            Back to top
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>
